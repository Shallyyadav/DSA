//Inverted Pyramid//
//{ Driver Code Starts

class Solution{
public:
	
	void printTriangle(int n) {
	    // code here
	    	for (int i = n; i >= 1; --i) {
        for (int j = 1; j <= i; ++j) {
            cout << "* ";
        }
        cout << endl;
    }
 
	
}
};



//let say n=5 as we see in first row 5 stars prints  then decraese to 4 and so on so we start a loop outer loop from n to 1. and j from 1 to row.//
