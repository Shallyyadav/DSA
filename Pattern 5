//Inverted Pyramid//
//{ Driver Code Starts

class Solution{
public:
	
	void printTriangle(int n) {
	    // code here
	    	for (int i = n; i >= 1; --i) {
        for (int j = 1; j <= i; ++j) {
            cout << "* ";
        }
        cout << endl;
    }
 
	
}
};



//the number of printed rows is equal to the given input n and the number of printed columns is decreasing from n to 1.
Therefore we run the outer for loop from n to 1 and the inner for loop from 1 to row number.//
