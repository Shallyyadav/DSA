
class Solution {
  public:
    void printTriangle(int n) {
        // code here
          for(int i=1;i<=n;i++){
              for(int j=1;j<=n-i;j++){
                  cout<<" ";
              }
              for(int k=1;k<=2*i-1;k++){
                  cout<<"*";
              }
              cout<<"\n";
          }
    }
};



//One loop is for printing the the space and another loop for printing the star//
